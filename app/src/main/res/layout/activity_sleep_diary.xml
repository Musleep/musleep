<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".sleep_diary">

    <LinearLayout
        android:id="@+id/Date1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/now_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#968C8C"
            android:textSize="25dp"
            android:text="Date"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/now_week"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#968C8C"
            android:textSize="25dp"
            android:text="Week"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <!--        <TextClock-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:format12Hour="yyyy/MM/dd"-->
        <!--            android:gravity="center_vertical"-->
        <!--            android:textColor="#968C8C"-->
        <!--            android:textSize="25dp"-->
        <!--            android:textStyle="bold" />-->

        <Button
            android:id="@+id/data_pick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:drawableTop="@drawable/ic_baseline_today_24"
            android:gravity="center_horizontal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Date1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chosen_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#968C8C"
            android:textSize="25dp"
            android:text="該死的給我選日期"
            android:textStyle="bold" />

        <Button
            android:id="@+id/chosen_date_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:drawableTop="@drawable/ic_baseline_today_24"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="1100dp"
        android:layout_height="600dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="#B3F0E5DE"
        android:elevation="20dp"
        android:orientation="horizontal"
        android:gravity="center">
