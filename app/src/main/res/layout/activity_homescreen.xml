    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sleep1"
            android:layout_width="260dp"
            android:layout_height="180dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/btn"
            android:text="睡眠資料"
            android:drawableTop="@drawable/ic_baseline_insert_chart_outlined_24"
            android:textSize="30sp" />
        <Button
            android:id="@+id/sleep2"
            android:layout_width="260dp"
            android:layout_height="180dp"
            android:background="@drawable/btn"
            android:text="時間設定"
            android:drawableTop="@drawable/ic_baseline_alarm_24"
            android:textSize="30sp" />
        <Button
            android:id="@+id/sleep3"
            android:layout_width="260dp"
            android:layout_height="180dp"
            android:layout_marginLeft="100dp"
            android:background="@drawable/btn"
            android:text="睡眠日誌"
            android:drawableTop="@drawable/ic_baseline_content_paste_24"
            android:textSize="30sp" />
