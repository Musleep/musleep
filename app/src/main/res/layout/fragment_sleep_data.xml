<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".sleep_data">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/sleep_date"
            android:text="10月20日 週二"
            android:textColor="@color/brown"
            android:textSize="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="總計睡眠時間"
            android:textColor="@color/brown"
            android:textSize="25dp" />
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="6dp"
            >
            <TextView
                android:id="@+id/sleep_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textColor="@color/brown"
                android:textSize="40dp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="小時"
                android:gravity="right"
                android:textColor="@color/brown"
                android:textSize="25dp"
                />
            <TextView
                android:id="@+id/sleep_min"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="16"
                android:textColor="@color/brown"
                android:textSize="40dp"
                />
            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="分鐘"
                android:gravity="right"
                android:textColor="@color/brown"
                android:textSize="25dp"
                />

        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/sleepdata_bg"
        >
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="150dp"
            android:gravity="center_vertical|right"
            >
            //效率
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                >
            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/sleep_effect"
                android:text="96%"
                android:paddingTop="27dp"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="效率"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/green1"
            android:gravity="center_horizontal"
            android:textSize="28dp"

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1231545645"
                android:gravity="center_horizontal"
                android:textColor="#A8A8A8"
                android:id="@+id/sleepEffect"
                android:textSize="23dp"
                />
            </LinearLayout>
            </LinearLayout>
            //音樂曲目
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="45dp"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/music_name"
                    android:paddingTop="17dp"
                    android:textAlignment="center"
                    android:textSize="28dp"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="音樂曲目"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/green1"
                        android:gravity="center_horizontal"
                        android:textSize="30dp"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1231545645"
                        android:gravity="center_horizontal"
                        android:id="@+id/musicName"
                        android:textColor="#A8A8A8"
                        android:textSize="23dp"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-110dp"
            android:layout_marginLeft="120dp">
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/piechart"
            android:layout_width="650dp"
            android:layout_height="650dp"
            >
        </com.github.mikephil.charting.charts.PieChart>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>



</LinearLayout>