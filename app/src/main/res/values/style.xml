<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:windowEnterAnimation">@style/animation</item>
    </style>
    <style name="animation" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:windowEnterAnimation">@anim/fragment_fade_enter</item>
        <item name="android:windowExitAnimation">@anim/fragment_fade_exit</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>